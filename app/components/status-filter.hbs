
    <PowerSelect
      @renderInPlace={{this.renderInPlace}}
      @searchEnabled={{false}}
      @options={{this.statusOptions}}
      @selected={{this.status}}
      @onChange={{fn (mut this.status)}} 
      as |singleselect|
    >
        <AuLink role="menuitem" @query={{hash status=singleselect}} @route="jobs.filter">
            {{singleselect}}
        </AuLink>
    </PowerSelect>
