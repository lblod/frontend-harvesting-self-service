{{#if (or (eq @status "success") (eq @status "collected"))}}
  <AuPill @skin="success">
    {{@status}}
  </AuPill>

{{else if (eq @status "failure") }}
  <AuPill @skin="error">
    {{@status}}
  </AuPill>

{{else if (or (eq @status "ongoing") (eq @status "ready-for-collecting") (eq @status "ready-to-be-cached") (eq @status "ready-for-sameas"))}}
  <AuPill @skin="action">
    {{@status}}
  </AuPill>

{{else if (eq @status "not-started") }}
  <AuPill>
    {{@status}}
  </AuPill>

{{else if (eq @status "busy") }}
  <AuPill @skin="warning">
    {{@status}}
</AuPill>

{{else}}
  {{@status}}
{{/if}}
