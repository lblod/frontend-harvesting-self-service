<AuMainContainer as |m|>
  <m.sidebar>
    <div class="au-c-sidebar">
      <div class="au-c-sidebar__content">
        <div class="au-u-padding au-u-padding-top">
          <AuLink
            @route="job2.tasklist"
            @skin="button"
            @icon="nav-left"
            @iconAlignment="left"
            @width="inline"
            @model={{this.job.id}}>
            Back to Tasklist
          </AuLink>
          {{!--Task info--}}
          <AuHeading
            @level="3"
            @skin="3"
            class="au-u-margin-top au-u-margin-bottom">
            Task details
          </AuHeading>
          <div class="au-u-flex--inline au-u-flex--wrap au-u-flex--spaced">
            <div>
              <AuLabel>URI</AuLabel>
              <p class="au-u-word-break">
                {{this.model.uri}}
              </p>
            </div>
            <div>
              <AuLabel>Operation</AuLabel>
              <p class="au-u-word-break">
                {{this.model.operation}}
              </p>
            </div>
            <div>
              <AuLabel>Created</AuLabel>
              <p class="au-u-word-break">
                {{format-date this.model.created}}
              </p>
            </div>
            <div>
              <AuLabel>Modified</AuLabel>
              <p class="au-u-word-break">
                {{format-date this.model.modified}}
              </p>
            </div>
            <div>
              <AuLabel>Status</AuLabel>
              <StatusPill @status={{this.model.shortStatus}}></StatusPill>
            </div>
            {{#if this.job.error.message}}
              <div>
                <AuAlert
                  @icon="cross"
                  @title="Error"
                  @skin="error">
                  <p class="au-u-word-break">
                    {{this.job.error.message}}
                  </p>
                </AuAlert>
              </div>
            {{/if}}
          </div>
          {{!--End Task info--}}
        </div>
      </div>
    </div>
  </m.sidebar>
  <m.content @scroll={{true}}>
    <div class="au-u-flex au-u-flex--column full-height">
      <AuTabs
        class="au-u-margin-top"
        as |Tab|>
        <Tab>
          <AuLink
            @route="job2.task.input-container-files">
            Input Container Files
          </AuLink>
        </Tab>
        <Tab>
          <AuLink
            @route="job2.task.results-container-files">
            Results Container Files
          </AuLink>
        </Tab>
        <Tab>
          <AuLink
            @route="job2.task.input-container-graph">
            Input Container Graph
          </AuLink>
        </Tab>
        <Tab>
          <AuLink
            @route="job2.task.results-container-graph">
            Results Container Graphs
          </AuLink>
        </Tab>
        <Tab>
          <AuLink
            @route="job2.task.input-container-harvesting-collections">
            Input Container Harvesting Collections
          </AuLink>
        </Tab>
      </AuTabs>
      {{outlet}}
    </div>
  </m.content>
</AuMainContainer>
