<AuMainContainer as |m|>
  <m.content @scroll={{true}}>
    <AuContentHeader
      @titlePartOne="Vlaanderen"
      @titlePartTwo="is lokaal bestuur">
    </AuContentHeader>
    <AuContent @skin="large">
      <div class="au-o-region au-o-layout au-u-max-width-xsmall">
        <AuCard
          @flex={{false}}
          @textCenter={{false}}
          @shadow={{true}}
          @size="regular"
          @standOut={{false}}
          @expandable={{false}}
          @isExpanded={{true}}
          @isOpenInitially={{true}}
          @manualControl={{false}}
          as |c|>
          <c.header>
            <AuHeading @level="1" @skin="1">
              Login
            </AuHeading>
          </c.header>
          <c.content>
            <MuLogin />
          </c.content>
        </AuCard>
      </div>
    </AuContent>
  </m.content>
</AuMainContainer>
